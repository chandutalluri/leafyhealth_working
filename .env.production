# LeafyHealth Production Environment Configuration
# Copy this to .env on your VPS and configure with actual values

# Database Configuration
POSTGRES_DB=leafyhealth
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Application Configuration
NODE_ENV=production
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters

# SSL/TLS Configuration
ACME_EMAIL=admin@yourdomain.com

# Redis Configuration (if using external Redis)
REDIS_URL=redis://redis:6379

# API Gateway Configuration
API_GATEWAY_URL=https://api.yourdomain.com

# Domain Configuration (Update with your actual domains)
DOMAIN_ECOMMERCE=yourdomain.com
DOMAIN_MOBILE=m.yourdomain.com
DOMAIN_ADMIN=admin.yourdomain.com
DOMAIN_SUPERADMIN=superadmin.yourdomain.com
DOMAIN_OPS=ops.yourdomain.com
DOMAIN_API=api.yourdomain.com

# External Service Keys (Add your actual API keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Email Service (Configure with your email provider)
SMTP_HOST=smtp.youremailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASS=your_email_password

# Image Storage (if using external storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=leafyhealth-images

# Monitoring & Analytics
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CORS_ORIGIN=https://yourdomain.com,https://m.yourdomain.com,https://admin.yourdomain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000