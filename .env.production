# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/leafyhealth_prod
PGHOST=localhost
PGPORT=5432
PGUSER=leafyhealth_user
PGPASSWORD=secure_production_password
PGDATABASE=leafyhealth_prod

# Security Configuration
JWT_SECRET=your_secure_jwt_secret_key_256_bit_minimum
SESSION_SECRET=your_secure_session_secret_key_256_bit_minimum

# Application Configuration
PORT=5000
HOSTNAME=0.0.0.0

# Production Domain
PRODUCTION_DOMAIN=your-domain.com
SSL_ENABLED=true

# Service URLs (Internal Only)
AUTH_SERVICE_URL=http://127.0.0.1:8085
DATA_GATEWAY_URL=http://127.0.0.1:8081

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log