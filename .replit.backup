modules = ["python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Company Management Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "All Backend Microservices"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Authentication Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Direct Data Gateway"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Unified Gateway"

[[workflows.workflow]]
name = "Company Management Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/domains/company-management && npm run start:dev"
waitForPort = 3013

[[workflows.workflow]]
name = "All Backend Microservices"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start-all-microservices.js"

[[workflows.workflow]]
name = "Authentication Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/authentication-service.js"
waitForPort = 8085

[[workflows.workflow]]
name = "Direct Data Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && node direct-data-gateway.js"
waitForPort = 8081

[[workflows.workflow]]
name = "Unified Gateway"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/unified-gateway.js"
waitForPort = 5000

